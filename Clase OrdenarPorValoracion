package izv.proyectoprogramacion;

import java.util.Comparator;

/**
 *
 * @author Ma√±ana
 */
public class OrdenarPorValoracion implements Comparator<Categoria>{

    @Override
    public int compare(Categoria o1, Categoria o2) {
        if (o1.mediaValoraciones > o2.mediaValoraciones) return 1;
        else if (o1.mediaValoraciones == o2.mediaValoraciones) return 0;
        else return -1;
    }
    
}
